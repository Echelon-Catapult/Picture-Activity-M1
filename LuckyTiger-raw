#include <stdio.h>
int main()
{
    int age;
    char name[32];
    int numGrade;
    int numSiblings;
    char favColor[32];
    char favSubject[32];
    char hobby[32];
    char favfood[32];


    printf("Hi there! First... \n");
    printf("What is your first name?\n");
    scanf("%s", name);
    printf("How old are you? Just the number, no need of full sentences!\n");
    scanf("%d", &age);
    printf("What number grade are you in? Just the number, no need of full sentences!\n");
    scanf("%d", &numGrade);
    printf("How many siblings do you have? Just the number, no need of full sentences!\n");
    scanf("%d", &numSiblings);
    printf("What is your favorite subject? Just one word, no need of full sentences!\n");
    scanf("%s", favSubject);
    printf("What is your favorite color? Just one word, no need of full sentences! \n");
    scanf("%s", favColor);
    printf("What is your hobby? Just one word, no need of full sentences!\n");
    scanf("%s", hobby);
    printf("What is your favorite food?\n");
    scanf("%s", favfood);
    printf( "My name is %s. I am %d years old. I am in %d grade. I have %d siblings. My favorite school subject is %s. My favorite color is %s. My hobby is to %s. My favorite food is %s. That is all about me!!!\n", name, age, numGrade, numSiblings, favSubject, favColor, hobby, favfood);

    return 0;
}
